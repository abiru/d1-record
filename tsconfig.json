{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["bun-types"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types"]
}
